<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anderson_cooke_mazer.workouttracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <instrumentation android:targetPackage="com.anderson_cooke_mazer.workouttracker"
        android:name="android.test.InstrumentationTestRunner">
    </instrumentation>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner"></uses-library>
        <activity
            android:name="com.anderson_cooke_mazer.workouttracker.WorkoutTracker"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anderson_cooke_mazer.workouttracker.WorkoutScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.anderson_cooke_mazer.workouttracker.WorkoutProgress"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
